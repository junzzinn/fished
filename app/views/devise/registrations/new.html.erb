<div class="container px-5" data-controller="icon-toggle">
  <div class="row">
    <%= image_tag "logo.png"%>
  </div>
  <div class="row mb-4">
    <span class="log-in-title">Welcome</span><br>
    <span class="log-in-subtitle" style="padding-left: 16px;">Register to begin your journey to Sea Success</span>
  </div>
  <div class="row">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name,
                    required: true,
                    label: false,
                    input_html: { class: "log-in-input border mb-3", placeholder: "Name" } %>
        <%= f.input :email,
                    required: true,
                    label: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "log-in-input border mb-3", placeholder: "Email address" }%>
        <%= f.input :password,
                    required: true,
                    label: false,
                    hint: ("* #{@minimum_password_length} characters minimum" if @minimum_password_length),
                    hint_html: {class: "log-in-text pl-3"},
                    input_html: { autocomplete: "new-password", class: "log-in-input border", placeholder: "Password" } %>
      </div>

      <div class="form-actions pt-5">
        <%= f.button :submit, "Sign up", class: "btn btn-custom", data: { action: "click->icon-toggle#toggle", tab: "home"} %>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center mt-2">
    <div class="text-center">
      <%- if controller_name != 'sessions' %>
        <%= link_to "Log in", new_session_path(resource_name), class: "log-in-text" %><br />
      <% end %>
    </div>
  </div>
</div>
