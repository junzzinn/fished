<div class="logo">
  <%= image_tag("logo.png", alt: "Logo", class: "logo-img") %> <!-- Adjust the path and alt text accordingly -->
</div>

<h2 class="log-in-title"></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                class: "log-in-input",
                placeholder: "Email" %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                class: "log-in-input",
                placeholder: "Password" %>
    <%= f.input :remember_me, as: :boolean, wrapper_class: "form-check-label" if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn-custom" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
