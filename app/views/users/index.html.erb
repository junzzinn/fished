<h1>List of Users</h1>

<ul>
  <% @users.each do |user| %>
    <li class="user-item">
      <%= link_to user.name, edit_user_path(user) %>
      <div class="delete-button">
        <%= button_to "Delete", user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </li>
  <% end %>
</ul>
