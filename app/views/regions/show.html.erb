<div class="container horizontal-scroll-container">
  <div class="horizontal-scroll-items" data-controller="icon-toggle">
      <div class="container py-3">
        <div class="row d-flex justify-content-center align-items-center" style="color: #282828;">
          <div class="col-md-9 col-lg-7 col-xl-5">
            <div class="card gradient-custom" style="border-radius: 25px; background: linear-gradient(to right, #4c7183, #39a7a5); border: none">
              <div class="card-body p-3">
                <div id="demo1_<%= @region.name %>" data-mdb-carousel-init class="carousel slide" data-ride="carousel" style="font-size: 10px; color: white">
                  <!-- Carousel inner -->
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <div class="d-flex justify-content-between">
                        <div>
                          <h2 class="display-2" style="font-size: 20px; color: white"><strong id="current-temperature_<%= @region.name %>">--°C</strong></h2>
                          <p class="mb-0" style="color: white" id="city-name_<%= @region.name %>">-<%= @region.name %>-</p>
                        </div>
                        <div>
                          <img src="" width="50px" id="current-weather-icon_<%= @region.name %>">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div id="demo2_<%= @region.name %>" data-mdb-carousel-init class="carousel slide" data-ride="carousel">
                  <!-- Carousel inner -->
                  <div class="carousel-inner" style="font-size: 9px; color: white" id="forecast_<%= @region.name %>">
                    <div class="carousel-item active" style="color: white">
                      <div class="d-flex justify-content-around text-center pt-2">
                        <div class="flex-column">
                          <p class="small mb-0"><strong>--°C</strong></p>
                          <i class="fas fa-sun fa-2x my-1" style="color: #ddd;"></i>
                          <p class="mb-0"><strong>--</strong></p>
                          <p class="mb-0" style="font-size: 9px; color: white">--</p>
                        </div>
                        <!-- Adicione os outros contêineres de previsão do tempo aqui -->
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
