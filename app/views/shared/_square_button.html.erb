<%= link_to path, class: "square-button" do %>
  <i class="<%= icon_class %>"></i>
<% end %>


<style>
  .square-button {
  background-color: turquoise;
  color: white;
  border: none;
  border-radius: 8px;
  padding: 8px 16px;
  cursor: pointer;
  font-size: 14px;
  text-decoration: none;
  margin-bottom: 70px; /* Adjust the margin to increase the gap */
}

.square-button:hover {
  background-color: #48D1CC;
}

.square-button i {
  margin-right: 3px;
}

.button-container {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding: 10px;
}

.bubble {
  position: relative;
  top: 20px; /* Adjust the vertical position as needed */
}
</style>
