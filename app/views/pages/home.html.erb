<div class="container">
  <div class="row">
    <%= image_tag "logo.png"%>
  </div>
  <div class="row mb-4" style="display: flex; align-items: center; justify-content: center;">
    <div style="text-align: center;">
      <span class="log-in-title" style="font-size: 40px">Welcome</span><br>
      <span class="log-in-subtitle" style="font-size: 20px">Your Guide to Sea Success</span>
    </div>
  </div>
  <div class="row" style="background-color: #40D3C4;">
    <div class="col-6">
      <br><span class="log-in-title-white">See the information about your fishing spots</span>
    </div>
    <div class="col-6" style="display: flex; justify-content: center;">
      <%= image_tag "t1.png", style: "width: 50%; transform: rotate(-10deg);" %>
    </div>
  </div>
  <div class="row" style="display: flex; align-items: center;">
    <div class="col-6" style="display: flex; justify-content: center;">
      <%= image_tag "t2.png", style: "width: 50%; transform: rotate(10deg);" %>
    </div>
    <div class="col-6">
      <br><span class="log-in-title">See all the nearby fishing regions</span>
    </div>
  </div>
  <div class="row" style="background-color: #40D3C4; padding-bottom: 100px;">
    <div class="col-6">
      <br><span class="log-in-title-white">See the detailed information about stops and their fish</span>
    </div>
    <div class="col-6" style="display: flex; justify-content: center;">
      <%= image_tag "t3.png", style: "width: 50%; transform: rotate(-10deg);" %>
    </div>
  </div>
</div>

<%= render "shared/navbar" %>
