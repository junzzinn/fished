<% if user_signed_in? %>
  <div class="container">
    <div class="row mt-5">
      <div class="col-1"></div>
      <div class="col-9">
        <h2>Hello <%= @user.name %></h2>
        <p style="font-size: 18px">It's <span style="color: turquoise;">sunny</span> today.</p>
      </div>
      <div class="col-2">
        <%= button_to destroy_user_session_path, method: :delete, class: "square-button" do %>
          <i class="fas fa-arrow-right-from-bracket"></i> <!-- Font Awesome X icon -->
        <% end %>
      </div>
    </div>
    <div class="row mt-1">
      <span style="font-size: 12px; color: #999898; padding-left: 50px">Search for your best fishing spots</span>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="d-flex justify-content-center">
          <div style="width: 85%;">
            <%= form_with model: @example, local: true do |form| %>
              <div class="input-group mb-3 shadow" style="background-color: white; border-radius: 20px;">
                <%= form.text_field :name, class: "form-control", placeholder: "Search fishing spot...", style: "background-color: white; border-radius: 20px 0 0 20px;" %>
                <button class="btn btn-white" type="submit" style="background-color: white; border-radius: 0 20px 20px 0;">
                  <i class="fas fa-search"></i>
                </button>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </div>
    <span style="color: #999898; padding-left: 10px">Weather in your region!</span>
    <div class="icon-and-forecast">
      <%= render partial: "shared/complete_forecast", locals: { spot: @spot, path: "maps"} %>
    </div>
    <div class="row">
      <h3 style="margin-top: 20px; padding: 8px 20px;">Favorite Locations</h3>
    </div>

  </div>
  <div style="padding-bottom: 100px">
    <%= render partial: "shared/region_card", locals: {regions: @regions} %>
  </div>
<% else %>
  <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="row justify-content-center my-3">
      <h2 class="text-center" style="color: #40D3C4;"><strong>Welcome</strong></h2>
      <span class="text-center mb-3">You must be logged in to have favorites!</span>
      <%= link_to "Log In", new_user_session_path, class: "btn btn-custom", style: "width: 70%" %>
    </div>
  </div>
<% end %>
<%= render "shared/navbar" %>
